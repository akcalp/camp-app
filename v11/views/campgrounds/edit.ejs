<% include ../partials/header.ejs %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= campground.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" required value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>"
                       min="0.00"
                       step="0.5">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" required
                       value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]"
                       value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>


</div>

<% include ../partials/footer.ejs %>